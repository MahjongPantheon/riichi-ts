{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "baseUrl": "",
    "lib": ["es6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": false,
    "downlevelIteration": true,
    "target": "es5",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  }
}
